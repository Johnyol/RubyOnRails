<section ng-controller="MultaController">

  <div class="toolbar p-2 border-bottom">
    <div class="container-fluid">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex">
          <div class="btn-group me-2" role="group">
            <button type="button" class="btn btn-primary"><i class="fa-solid fa-plus"></i></button>
            <button type="button" class="btn btn-light border">Nova Infração</button>
          </div>
          <div class="input-group" style="width: 350px;">
            <input type="text" class="form-control" placeholder="Pesquise aqui">
            <button class="btn btn-primary" type="button"><i class="fa-solid fa-magnifying-glass"></i></button>
            <button class="btn btn-secondary" ng-click="abrirFiltro = !abrirFiltro" type="button" title="Filtros">
              <i class="fa-solid fa-filter"></i>
            </button>
            <button class="btn btn-secondary" title="Imprimir"><i class="fa-solid fa-print"></i></button>
          </div>
        </div>
        <div>
          <button class="btn btn-secondary" type="button" title="Mais opções">
            <i class="fa-solid fa-ellipsis"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div ng-if="abrirFiltro" class="container-fluid p-4 contain-filtro-tarefa">
    <div class="card shadow-sm p-4 body-filtro-tarefa">
      <div class="d-flex flex-column mb-3 gap-3"> 
        <div class="d-flex flex-wrap gap-3">
          <div class="form-group col-md-1">
            <label for="codigo">Código:</label>
            <input id="codigo" class="form-control" type="number">   
          </div>
          <div class="form-group col-md-2">
            <label for="titulo">Titulo:</label>
            <input id="titulo" class="form-control">   
          </div>
          <div class="form-group col-md-2">
            <label for="infrator">Infrator:</label>
            <input id="infrator" class="form-control">   
          </div>
          <div class="form-group col-md-2">
            <label for="tipoData">Tipo de Data:</label>
            <select class="form-control" id="tipoData">
              <option>teste</option>
              <option>teste</option>
              <option>teste</option>
            </select> 
          </div>
          <div class="form-group col-md-1">
            <label for="inicioData">Inicio:</label>
            <input class="form-control" id="inicioData" type="date">   
          </div>
          <div class="form-group col-md-1">
            <label for="fimData">Fim:</label>
            <input class="form-control" id="fimData" type="date">
          </div>
        </div>
        <div class="d-flex flex-wrap gap-3">
          <div class="form-group col-md-2">
            <label for="unidade">Unidade</label>
            <div class="d-flex">
              <input id="unidade" type="text" class="form-control" placeholder="Pesquise aqui">
              <button class="btn btn-primary" type="button"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
          </div>  
          <div class="form-group col-md-3">
            <label for="tipo">Tipo</label>
            <select class="form-control" id="tipo">
              <option>teste</option>
              <option>teste</option>
              <option>teste</option>
            </select> 
          </div>
          <div class="form-group col-md-3">
            <label for="opcoes">Opções</label>
            <select class="form-control" id="opcoes">
              <option>teste</option>
              <option>teste</option>
              <option>teste</option>
            </select> 
          </div>      
        </div>
      </div>
      <hr>
      <div>   
        <button class="btn btn-primary" type="button"><i class="fa-solid fa-check"></i> Aplicar</button>
        <button class="btn btn-danger" type="button"><i class="fa-solid fa-circle-xmark"></i> Limpar Busca</button>
      </div>
    </div>
  </div>

  
  <div class="container-fluid p-4">

    <div class="card shadow-sm">
      <div class="contain-header">
        <div class="body-header">
          <div class="item-header">
            <span style="color: #ffd700;">Advertência (30)</span>
          </div>
          <div class="item-header">
            <span><small style="color: red;">Multa (51)</small> <br> R$ 10.072,52</span>
          </div>
          <div class="item-header">
            <span><small style="color: #0047ab;">Total (51) </small><br>R$ 10.072,52</span>
          </div>
        </div>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="ps-3" style="width: 1%;"></th>
                <th scope="col">Código / Status</th>
                <th scope="col">Título / Tipo</th>
                <th scope="col">Unidade / Infrator</th>
                <th scope="col">Data de cobrança / Valor</th>
                <th scope="col">Ocorrido em</th>
                <th scope="col" style="width: 1%;"></th>
              </tr>
            </thead>
            <tbody ng-repeat="multa in listCtrl.multas">

              <tr ng-click="itemCtrl.abriMultaItem(multa)" style="cursor: pointer;">
                <td class="ps-3"><input type="checkbox" ng-click="$event.stopPropagation()"></td>
                <td>#{{multa.id}}<br><span class="badge text-bg-warning">Advertência</td>
                <td>{{multa.titulo}}<br><small class="text-muted">{{multa.tipo}}</small></td>
                <td>{{multa.unidade}}<br><small class="text-muted">{{multa.nome}}</small></td>
                <td>{{multa.data_cobranca | date:'dd/MM/yyyy'}}<br>{{multa.valor_multa | currency:'R$ '}}</td>
                <td>{{multa.data | date:'dd/MM/yyyy'}} às {{multa.horario | date:'HH:mm'}}</td>
                <td class="text-end">
                  <div class="dropdown"><button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false" ng-click="$event.stopPropagation()"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li class="dropdown-item" ng-click="formCtrl.open(multa)"> <i class="fa-solid fa-pencil me-2"></i>Editar</li>
                      <li class="dropdown-item"> <i class="fa-solid fa-ban me-2"></i>Cancelar</li>
                      <li class="dropdown-item"> <i class="fa-solid fa-print me-2"></i>Imprimir</li>
                    </ul>
                  </div>
                </td>
              </tr>

              <tr ng-show="multa.aberta">
                <td colspan="7" class="p-0" ng-if="!multa.editando">
                  <div class="card shadow-sm m-2">
                     show
                    <div class="card-body p-4">
                      <h5 class="mb-3">Dados Gerais da Infração #{{multa.id}}</h5>
                      <div class="row g-3">
                        <div class="col-md-12">
                          <label for="titulo" class="form-label">Título</label>
                          <input type="text" class="form-control" id="titulo" ng-model="multa.titulo">
                       
                          <label for="ocorrido-em" class="form-label">Ocorrido em</label>
                          <input type="date" class="form-control" id="ocorrido-em" ng-model="multa.data">
                          {{multa.data}}
                        </div>

                        <div class="col-md-2">
                          <label for="horario" class="form-label">Horário</label>
                          <input type="time" class="form-control" id="horario" ng-model="multa.horario">
                          {{multa.horario}}
                        </div>

                        <div class="col-md-3">
                          <label for="tipo" class="form-label">Tipo</label>
                          <input type="text" class="form-control" id="tipo" ng-model="multa.tipo" placeholder="Digite um tipo">
                        </div>

                        <div class="col-md-4">
                          <label for="nome-infrator" class="form-label">Nome do Infrator</label>
                          <input type="text" class="form-control" id="nome-infrator" ng-model="multa.nome" placeholder="Ex: João Batista">
                        </div>
                        
                        <div class="col-md-8">
                          <label for="unidade" class="form-label">Unidade</label>
                          <div class="input-group">
                            <input type="text" class="form-control" id="unidade" ng-model="multa.unidade" placeholder="Digite uma unidade">
                            <button class="btn btn-outline-primary" type="button"><i class="fa-solid fa-magnifying-glass"></i></button>
                          </div>
                        </div>

                        <div class="col-md-4">
                          <label for="valor-multa" class="form-label">Valor da Multa</label>
                          <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="text" class="form-control" id="valor-multa" ng-model="multa.valor_multa">
                          </div>
                        </div>
                      </div>

                      <h5 class="mt-5 mb-3">Anexos</h5>
                      <div class="d-flex gap-2">
                        <button class="btn btn-secondary"><i class="bi bi-camera-fill me-1"></i> Tirar Foto</button>
                        <button class="btn btn-secondary"><i class="bi bi-paperclip me-1"></i> Anexar</button>
                        <div class="dropdown">
                          <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Selecione o Tipo
                          </button>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Documento</a></li>
                            <li><a class="dropdown-item" href="#">Foto do Local</a></li>
                            <li><a class="dropdown-item" href="#">Outro</a></li>
                          </ul>
                        </div>
                      </div>
                      <div class="text-center text-muted border rounded p-4 my-3">
                        Nenhum anexo disponível!
                      </div>
                      <h5 class="mt-5 mb-3">Detalhes</h5>
                      <div>
                        <textarea class="form-control" id="editor-detalhes" rows="10" ng-model="multa.detalhes"></textarea>
                      </div>
                    </div>
                    <div class="card-footer bg-light text-end">
                      <button type="button" class="btn btn-secondary px-4" ng-click="formCtrl.close(multa)">Fechar</button>
                      <button type="submit" class="btn btn-primary px-4 ms-2">Salvar Alterações</button>
                    </div>
                  </div>
                </td>

                <td colspan="7" class="p-0" ng-if="multa.editando">
                  editando
                  <div class="card shadow-sm m-2">
                    <div class="card-body p-4">
                      <h5 class="mb-3">Dados Gerais da Infração #{{multa.id}}</h5>
                      <div class="row g-3">
                        <div class="col-md-12">
                          <label for="titulo" class="form-label">Título</label>
                          <input type="text" class="form-control" id="titulo" ng-model="multa.titulo">
                        </div>

                        <div class="col-md-3">
                          <label for="ocorrido-em" class="form-label">Ocorrido em</label>
                          <input type="date" class="form-control" id="ocorrido-em" ng-model="multa.data">
                          {{multa.data}}
                        </div>

                        <div class="col-md-2">
                          <label for="horario" class="form-label">Horário</label>
                          <input type="time" class="form-control" id="horario" ng-model="multa.horario">
                          {{multa.horario}}
                        </div>

                        <div class="col-md-3">
                          <label for="tipo" class="form-label">Tipo</label>
                          <input type="text" class="form-control" id="tipo" ng-model="multa.tipo" placeholder="Digite um tipo">
                        </div>

                        <div class="col-md-4">
                          <label for="nome-infrator" class="form-label">Nome do Infrator</label>
                          <input type="text" class="form-control" id="nome-infrator" ng-model="multa.nome" placeholder="Ex: João Batista">
                        </div>
                        
                        <div class="col-md-8">
                          <label for="unidade" class="form-label">Unidade</label>
                          <div class="input-group">
                            <input type="text" class="form-control" id="unidade" ng-model="multa.unidade" placeholder="Digite uma unidade">
                            <button class="btn btn-outline-primary" type="button"><i class="fa-solid fa-magnifying-glass"></i></button>
                          </div>
                        </div>

                        <div class="col-md-4">
                          <label for="valor-multa" class="form-label">Valor da Multa</label>
                          <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="text" class="form-control" id="valor-multa" ng-model="multa.valor_multa">
                          </div>
                        </div>
                      </div>

                      <h5 class="mt-5 mb-3">Anexos</h5>
                      <div class="d-flex gap-2">
                        <button class="btn btn-secondary"><i class="bi bi-camera-fill me-1"></i> Tirar Foto</button>
                        <button class="btn btn-secondary"><i class="bi bi-paperclip me-1"></i> Anexar</button>
                        <div class="dropdown">
                          <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Selecione o Tipo
                          </button>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Documento</a></li>
                            <li><a class="dropdown-item" href="#">Foto do Local</a></li>
                            <li><a class="dropdown-item" href="#">Outro</a></li>
                          </ul>
                        </div>
                      </div>
                      <div class="text-center text-muted border rounded p-4 my-3">
                        Nenhum anexo disponível!
                      </div>
                      <h5 class="mt-5 mb-3">Detalhes</h5>
                      <div>
                        <textarea class="form-control" id="editor-detalhes" rows="10" ng-model="multa.detalhes"></textarea>
                      </div>
                    </div>
                    <div class="card-footer bg-light text-end">
                      <button type="button" class="btn btn-secondary px-4" ng-click="itemCtrl.abriMultaItem(multa)">Fechar</button>
                      <button type="submit" class="btn btn-primary px-4 ms-2">Salvar Alterações</button>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>